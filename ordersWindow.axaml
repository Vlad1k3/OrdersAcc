<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        d:DesignWidth="800" 
        d:DesignHeight="450"
        x:Class="OrdersAcc.ordersWindow"
        Title="OrdersAcc">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
            <TextBlock Text="Доступные заказы" FontWeight="Bold"/>
            <ListBox x:Name="orders" SelectionChanged="ListBox_SelectionChanged">
            </ListBox>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="Update list" Click="updateListButton_Click"/>
            <Button Content="Create new order" Click="createOrderButton"/>
        </StackPanel>
    </Grid>
</Window>
